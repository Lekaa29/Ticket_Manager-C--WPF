<Page x:Class="Ticket_Manager.ItemDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ticket_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemDetailsPage">

    <Grid>
        <StackPanel>
            <TextBlock Name="MatchNameTextBlock" FontSize="24" FontWeight="Bold" />
            <TextBlock Name="MatchDateTextBlock" FontSize="18" Margin="0,10,0,0" />
            <TextBlock Name="MatchLocationTextBlock" FontSize="18" Margin="0,10,0,0" />
        </StackPanel>
    
    </Grid>
</Page>
